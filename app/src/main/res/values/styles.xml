<resources>


    <style name="AppTheme" parent="BaseTheme">

    </style>

    <!-- Base application theme. -->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name ="actionModeStyle">@style/MyActionMode</item>

        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SourceDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/SourceDialogAnimation</item>
    </style>

    <style name="SourceDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="MyActionMode" parent = "@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/contextualBackground</item>
        <item name="titleTextStyle">@style/MyTextStyle</item>

    </style>
    
    <style name="MyTextStyle" parent = "TextAppearance.AppCompat.Widget.ActionBar.Title">

    </style>

    <style name="AnswerStyle" parent = "TextAppearance.AppCompat.Widget.ActionMode.Title" >
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/answerColor</item>
    </style>

    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorToolBarTitle</item>3
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@color/colorToolBarSubtitle</item>
    </style>

    <style name="MyPopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPopUpBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="MyListItemTheme">
        <item name="android:textSize">31dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>


    <style name="MyButtonStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name = "MatrixInputStyle">
        <item name="android:inputType">numberSigned|numberDecimal</item>

        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatrixSolutionStyle">
        <item name="android:layout_marginTop">@dimen/sol_answer_vertical_width</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
