<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="AppMaterialTheme" parent="BaseTheme">
        <item name="editTextStyle">@style/AppMaterialTheme.EditTextStyle</item>
        <item name="android:popupMenuStyle">@style/MyPopUpTheme</item>
        <item name="colorControlActivated">#00796B</item>
        <item name="colorControlHighlight">#c5c5c5</item>
    </style>

    <style name="AppMaterialTheme.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppMaterialTheme.TextInputHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#26a69a</item>
    </style>


    <style name="AnswerStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/answerColor</item>
    </style>

    <style name="AboutTheme" parent="Theme.Mal.Light">
        <item name="colorControlActivated">#00796B</item>
        <item name="colorControlHighlight">#c5c5c5</item>
        <item name="android:background">@color/colorMainBackground</item>
        <item name="mal_toolbarTheme">@style/MyToolBarTheme</item>
    </style>

    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">#a6bdc7</item> -->
    </style>

    <style name="MyPopUpTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorMainBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="AppMaterialTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="AppMaterialTheme.ButtonStyle.Exit">
        <item name="android:textColor">#602d1c</item>
    </style>

    <style name="MatrixInputStyle">
        <item name="android:inputType">numberSigned|numberDecimal</item>

        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatrixSolutionStyle">
        <item name="android:layout_marginTop">@dimen/sol_answer_vertical_width</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>

        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatrixConstantStyle">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_width">@dimen/matrix_elements_width</item>
        <!---<item name="android:layout_marginBottom">10dp</item> -->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppMaterialTheme.TableHeaderStyle" parent="android:TextAppearance">
        <item name="android:textColor">#143864</item>
    </style>

    <style name="AppMaterialTheme.TableTextStyle" parent="android:TextAppearance">
        <item name="android:textColor">#3a5e70</item>
    </style>

    <style name="AppMaterialTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AboutToolBarTheme">
        <item name="android:background">#a6bdc7</item>
    </style>
</resources>
